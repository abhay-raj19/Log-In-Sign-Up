<%- include('partials/header') %>
<div class="container mt-5">
  <h1 class="font-style">Sign Up Phone</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/signupPhone" method="POST">
            <div class="form-group">
              <label for="text ">Phone Number</label>
              <input type="text" class="form-control" name="number">
            </div>
            <div class="form-group">
              <label for="number">Code</label>
              <input type="number" class="form-control" name="password">
            </div>
            <button type="submit" class="btn back">Get Code</button>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button type="submit" class="btn back text-center">Register</button>  
            
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/header') %>